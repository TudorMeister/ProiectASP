@foreach (ProiectASP.Models.Article article in ViewBag.Articles)
{
        <div class="card">

        <div class="card-body">

    <h3 id="ArticleTitle" class="card-title alert-success py-3 px-3 rounded-2">@article.Title</h3>

    <div class="card-text">@Html.Raw(article.Content)</div>

    <div class="d-flex justify-content-between flex-row mt-5">

        <div><i class="bi bi-globe"></i> @article.Category.CategoryName</div>

        <div><i class="bi bi-person"></i> @article.User.UserName</div>

        <span id="Data" class="alert-success">@article.Date</span>

    </div>

</div>


            <a id="Buton" class="btn btn-success" href="/Articles/Show/@article.Id">Afisare articol</a>

        </div>

        <br />
        <br />
}
<div>
    <nav aria-label="Page navigation example">
        <ul class="pagination">
            <li class="page-item">
                <a class="page-link" href="@ViewBag.PaginationBaseUrl=1" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                </a>
            </li>

            @for (int i = 1; i <= ViewBag.lastPage; i++)
            {
                    <li class="page-item"> <a class="page-link" href="@ViewBag.PaginationBaseUrl=@i">@(i)</a> </li>
            }

            <li class="page-item">
                <a class="page-link" href="@ViewBag.PaginationBaseUrl=@(ViewBag.lastPage)" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                </a>
            </li>
        </ul>
    </nav>
</div>